{% extends 'gabarit.twig' %}

{% block title %}Page accueil{% endblock %}
{% block cssAccueil %}
<link rel="stylesheet" type="text/css" href="css/produits.css" />{% endblock %}
{% block contenu %}
<div class="container">
   <h1>Sélection {{produits.collection}} {{produits.annee}}</h1>
   <section class="produits">
      {% for key,value in produits.tshirts %}
      <article class="prod">
         <div class="figure">
            <img src="medias/prod{{value.id}}.jpg" alt="produit {{value.nom}}">
         </div>
         <div class="desc">
            <h2><a href="afficheProduit.php?idp={{value.id}}">{{value.nom}}</a></h2>
            <p class="prix">
               {{value.prix}} €
               {% if value.promo %}
               <span class="promo">(promotion)</span>
               {% endif %}
            </p>
            <p class="description">
               <strong>Modèle {{value.categorie}} </strong>
               {{value.description}}
            </p>
         </div>
         <div class="notation">
            {% for i in 1..5%}
            {% if i <= value.notation %}
            <span class="starOn"></span>
            {% else %}
            <span class="starOff"></span>
            {% endif %}

            {% endfor %}
         </div>
      </article>
      {% endfor %}
   </section>
</div>
{% endblock %}